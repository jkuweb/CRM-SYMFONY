{% extends 'dashboard/dashboard.html.twig' %}
{% block wrapper %}
            <!-- ============================================================== -->
            <!-- pageheader -->
            <!-- ============================================================== -->
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <div class="page-header">
                        <h2 class="pageheader-title">Ficha del Cliente</h2>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- end pageheader -->
            <!-- ============================================================== -->

            <div class="row">
                <!-- ============================================================== -->
                <!-- responsive table -->
                <!-- ============================================================== -->
                <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
                    <div class="card">
                        <h5 class="card-header">Cliente</h5>
                        <div class="card-body">
                            <div class="table-responsive ">
                                <table class="table">
                                    <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Nombre</th>
                                        <th scope="col">Dni</th>
                                        <th scope="col">Domicilio</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for cliente in clientes %}
                                        <tr>
                                            <th scope="row">{{ cliente.id }}</th>
                                            <td>
                                                <a href="{{ path('cliente_ver', {id: cliente.id}) }}">{{ cliente.nombre }}</a>
                                            </td>
                                            <td>{{ cliente.dni }}</td>
                                            <td>
                                                <a href="{{ path('domicilio_ver', {id: cliente.id}) }}">Ver</a>
                                            </td>
                                            <td>
                                                <a href="{{ path('cliente_editar', {id: cliente.id}) }}">Editar</a>
                                            </td>
                                            <td>
                                                <a href="{{ path('cliente_eliminar', {id: cliente.id}) }}">Eliminar</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- ============================================================== -->
                <!-- end responsive table -->
                <!-- ============================================================== -->




                </div>
            </div>
        </div>
    <!-- ============================================================== -->
    <!-- end main wrapper -->
    <!-- ============================================================== -->
{% endblock wrapper%}